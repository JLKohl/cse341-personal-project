{
  "openapi": "3.0.3",
  "info": {
    "title": "Disney Travel Planner API",
    "description": "API for planning Disney trips",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://cse341-personal-project-m6ip.onrender.com",
      "description": "Production server"
    },
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/trips": {
      "get": {
        "summary": "Get all trips",
        "tags": ["Trips"],
        "responses": {
          "200": { "description": "List of trips" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a new trip",
        "tags": ["Trips"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Super Awesome Trip" },
                  "startDate": { "type": "string", "format": "date", "example": "11/21/2027" },
                  "endDate": { "type": "string", "format": "date", "example": "11/25/2027" },
                  "parkList": { 
                    "type": "array", 
                    "items": { "type": "string" }, 
                    "example": ["Magic Kingdom", "Hollywood Studios"]
                  },
                  "hotel": { "type": "string", "example": "Animal Kingdom Lodge" },
                  "budget": { "type": "number", "example": 5000 },
                  "notes": { "type": "string", "example": "Book FastPasses in advance" }
                },
                "required": ["name","startDate","endDate","parkList"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Trip created" },
          "400": { "description": "Validation failed (Bad Request)" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/trips/{id}": {
      "get": {
        "summary": "Get a trip by ID",
        "tags": ["Trips"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId of the trip",
            "example": "698beb3f25f6b37b00ee7200"
          }
        ],
        "responses": {
          "200": { "description": "Trip found" },
          "404": { "description": "Trip not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update a trip",
        "tags": ["Trips"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId of the trip",
            "example": "698beb3f25f6b37b00ee7200"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Super Awesome Trip" },
                  "startDate": { "type": "string", "format": "date", "example": "11/21/2027" },
                  "endDate": { "type": "string", "format": "date", "example": "11/25/2027" },
                  "parkList": { 
                    "type": "array", 
                    "items": { "type": "string" }, 
                    "example": ["Magic Kingdom", "Hollywood Studios"]
                  },
                  "hotel": { "type": "string", "example": "Animal Kingdom Lodge" },
                  "budget": { "type": "number", "example": 5000 },
                  "notes": { "type": "string", "example": "Book FastPasses in advance" }
                },
                "required": ["name","startDate","endDate","parkList"]
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Trip updated successfully (No Content)" },
          "400": { "description": "Validation failed (Bad Request)" },
          "404": { "description": "Trip not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete a trip",
        "tags": ["Trips"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId of the trip",
            "example": "698beb3f25f6b37b00ee7200"
          }
        ],
        "responses": {
          "200": { "description": "Trip deleted" },
          "404": { "description": "Trip not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/attractions": {
      "get": {
        "summary": "Get all attractions",
        "tags": ["Attractions"],
        "responses": {
          "200": { "description": "List of attractions" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a new attraction",
        "tags": ["Attractions"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Slinky Dog Dash" },
                  "park": { "type": "string", "example": "Hollywood Studios" },
                  "waitTime": { "type": "number", "example": 50 },
                  "rideType": { "type": "string", "example": "Family Ride" }
                },
                "required": ["name","park","waitTime","rideType"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Attraction created" },
          "400": { "description": "Validation failed (Bad Request)" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/attractions/{id}": {
      "get": {
        "summary": "Get an attraction by ID",
        "tags": ["Attractions"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId of the attraction",
            "example": "698beb3f25f6b37b00ee719f"
          }
        ],
        "responses": {
          "200": { "description": "Attraction found" },
          "404": { "description": "Attraction not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update an attraction",
        "tags": ["Attractions"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId of the attraction",
            "example": "698beb3f25f6b37b00ee719f"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Slinky Dog Dash" },
                  "park": { "type": "string", "example": "Hollywood Studios" },
                  "waitTime": { "type": "number", "example": 50 },
                  "rideType": { "type": "string", "example": "Family Ride" }
                },
                "required": ["name","park","waitTime","rideType"]
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Attraction updated successfully (No Content)" },
          "400": { "description": "Validation failed (Bad Request)" },
          "404": { "description": "Attraction not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete an attraction",
        "tags": ["Attractions"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "MongoDB ObjectId of the attraction",
            "example": "698beb3f25f6b37b00ee719f"
          }
        ],
        "responses": {
          "200": { "description": "Attraction deleted" },
          "404": { "description": "Attraction not found" },
          "500": { "description": "Server error" }
        }
      }
    }
  }
}
